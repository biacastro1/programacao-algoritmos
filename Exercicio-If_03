Scripts.js
//Elaborar um algoritmo que informe se um número informado pelo usuário é par ou ímpar.//

var numero = parseInt(prompt("Digite um número"));

if (numero % 2 == 0) {
    alert("O número é par " + numero);
} else if (numero % 2 == 1) {
    alert("O número é ímpar " + numero);
}
